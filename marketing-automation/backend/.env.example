# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys
SERPAPI_KEY=your_serpapi_key_here
OPENAI_API_KEY=your_openai_key_here

# WeChat Configuration
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# XHS Configuration (for semi-automated workflow)
XHS_COOKIE=your_xhs_cookie_here

# Google Docs Configuration
GOOGLE_DOCS_CREDENTIALS=path/to/service-account-credentials.json
GOOGLE_DOCS_FOLDER_ID=your_google_drive_folder_id

# Database
DATABASE_PATH=./data/marketing.db

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# AI Configuration
AI_PROVIDER=openai # or 'ollama'
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100